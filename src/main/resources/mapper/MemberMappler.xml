<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.new_test.mapper.MemberMapper">
    <resultMap id="MemberMap" type="com.example.new_test.entity.MemberDto">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="age" property="age" />
        <result column="hobby" property="hobby" />
    </resultMap>

    <sql id="searchWhere">
        WHERE 1 = 1
        <if test="searchMap != null and searchMap.size != 0">
            AND
            <foreach collection="searchMap" item="value" index="key" separator="and">
                <choose>
                    <when test="key != 'id' and key != 'age'" >
                        ${key} LIKE CONCAT('%', #{value}, '%')
                    </when>
                    <when test="key == 'id' or key == 'age'" >
                        ${key} = ${value}
                    </when>
                </choose>
            </foreach>
        </if>
    </sql>

    <select id="findData" resultMap="MemberMap">
        SELECT * FROM yjchoi.member
        <include refid="searchWhere"></include>
        ORDER BY
        <foreach collection="order" item="value" separator=",">
            ${value}
        </foreach>
        LIMIT #{length} OFFSET #{start}
    </select>

    <select id="findDataTotalCount" resultType="Integer">
        SELECT COUNT(id) FROM yjchoi.member
        <include refid="searchWhere"></include>
    </select>
</mapper>


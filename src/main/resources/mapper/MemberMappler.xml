<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.new_test.mapper.MemberMapper">
    <resultMap id="MemberMap" type="com.example.new_test.entity.MemberDto">
        <result column="mem_id" property="id" />
        <result column="name" property="name" />
        <result column="age" property="age" />
        <result column="hobby" property="hobby" />
    </resultMap>

    <select id="findData" resultMap="MemberMap">
        SELECT * FROM test_schema.test_member
        WHERE name LIKE CONCAT('%', #{search}, '%')
        LIMIT #{length} OFFSET #{start}
    </select>

    <select id="findAll" resultMap="MemberMap">
        SELECT * FROM test_schema.test_member
    </select>
</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.new_test.mapper.MemberMapper">
    <resultMap id="MemberMap" type="com.example.new_test.entity.MemberDto">
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="age" property="age" />
        <result column="hobby" property="hobby" />
    </resultMap>

    <select id="findData" resultMap="MemberMap">
        SELECT * FROM yjchoi.member
        WHERE ${searchType} LIKE CONCAT('%', #{search}, '%')
        ORDER BY ${culumn} ${order}
        LIMIT #{length} OFFSET #{start}
    </select>

    <select id="findDataTotalCount" resultType="Integer">
        SELECT COUNT(id) FROM yjchoi.member
        <if test="search != null and !search.equals('')">
            WHERE ${searchType} LIKE CONCAT('%', #{search}, '%')
        </if>
    </select>
</mapper>

